{
  "name": "popwall",
  "version": "0.0.4",
  "fullName": "Pop Wall",
  "description": "A pretty wall with dynamic content",
  "keywords": [
    "wall"
  ],
  "joshfire": {
    "mustache":true,
    "images": {
      "small":"marketing/image-small.png",
      "big":"marketing/image-big.png"
    },
    "devices": [
      {
        "devices": "desktop",
        "startfile": "app/index.html",
        "images": "marketing/desktop.png", 
        "screenshots" : ["marketing/screenshot.png"]
      }
    ],
    "datasources": {
      "main": {
        "title": "Main source",
        "description": "Content to be displayed"
      }
    },
    "options": {
      "schema": {
        "datafilter": {
          "type": "string",
          "title":"Keyword for data filtering"
        },
        "headerhtml": {
          "type": "string",
          "title":"HTML to add before the content"
        },
        "footerhtml": {
          "type": "string",
          "title":"HTML to add after the content"
        },
        "headertitle": {
          "type": "string",
          "title":"Big title"
        }
      },
      "form": [
        "datasources.main",
        "headertitle",
        "datafilter",
        {
          "key": "headerhtml",
          "type": "textarea"
        },
        {
          "key": "footerhtml",
          "type": "textarea"
        }
      ]
    }
  }
}